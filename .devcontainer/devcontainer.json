{
    "name": "Python ML Dev Container",
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "runArgs": ["--gpus", "all", "--shm-size=2g", "--env-file=${localWorkspaceFolder}/.env"],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.pythonPath": "/usr/local/bin/python",
                "python.formatting.provider": "black",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.linting.mypyEnabled": true,
                "jupyter.jupyterServerType": "local"
            },
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "codeium.codeium",
                "mhutchie.git-graph"
            ]
        }
    },
    "postCreateCommand": "bash scripts/postCreateCommand.sh",
    "remoteUser": "ubuntu",
    "mounts": [
        "source=${env:HOME}/.gitconfig,target=/home/ubuntu/.gitconfig,type=bind"
    ],
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    }
}
  
